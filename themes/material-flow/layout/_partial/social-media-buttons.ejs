<%
    let post_path = config.url + url_for(post.path);
    let tags = [];
    post.tags.each(function(item){
        tags.push(item.name);
    });
    let share_url = encodeURIComponent(post_path);
    let share_title = encodeURIComponent(post.title);
    let share_tags = encodeURIComponent(tags.join(','));
    // https://www.w3schools.com/howto/howto_css_social_media_buttons.asp
    // https://simplesharebuttons.com/html-share-buttons/ 
%>
<div class="social-media-buttons">
    <a class="fa fa-facebook" title="Share" target="_blank" rel="noopener" href="https://www.facebook.com/sharer/sharer.php?u=<%= share_url %>"></a>
    <a class="fa fa-linkedin" title="Share" target="_blank" rel="noopener" href="https://www.linkedin.com/sharing/share-offsite/?url=<%= share_url %>"></a>
    <a class="fa fa-envelope-o" title="Mail" href="mailto:?Subject=<%= share_title %>&amp;Body=<%= share_title %> : <%= share_url %>"></a>
    <a class="fa fa-print" title="Print" href="#" onclick="window.print(); return false;"></a>
</div>
